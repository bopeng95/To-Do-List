    <ul class="alpha-font">
        <a href="/home/{{slug}}"><li>home</li></a>
        <a href="/home/{{slug}}/profile"><li>profile</li></a>
    	<form method="POST" action="/logout" class="logoutform">
    		<button class="logoutbtn">logout</button>
    	</form>
    </ul>
